<% posts.each do |post| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
       <%= link_to post.title, topic_post_path(post.topic, post) %>
      </h4>
      <small>
        submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %> <%= image_tag post.user.avatar_url(30) %> <br>
        <%= post.comments.count %> Comments
      </br>
        <%= post.votes.count %> Votes
      </small>
    </div>
  </div>
<% end %>
